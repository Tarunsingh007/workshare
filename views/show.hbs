<div class="container" id="postcontainer">
{{>header}}
<!-- {{#if user}}
welcome {{user.username}}
{{/if}}
 -->
{{#if show}}
{{#list show}}
	Show HN: {{this.title}}<a href="\/{{this.url}}" id="posta">({{this.url}})</a></br>
	<p id="posta">by {{this.name}} | <a href="/show/hide/{{this._id}}"id="posta">hide</a> | 
	<a href="/post/comment/{{this._id}}" id="posta">{{humanize this.created}}</a> | 
	<a href="/post/comment/{{this._id}}" id="posta">{{countComments this.comments}} comments</a> | 
	<a href="/post/comment/{{this._id}}" id="posta">{{this.upvotes}} Likes</a></p>
	{{#if ../user}}
	{{#if (allowLike ../user._id this.likedby)}}
		<td><center><a href="/upvote/{{this._id}}"><div valign="top" id="arrow"></div></a></center></td>
		{{else}}
		<td><center><a href="/upvote/{{this._id}}"><div valign="top" id="votearrow"></div></a></center></td>
		{{!-- <form action="/upvote/{{this._id}}" method="post"> --}}
		{{!-- <input type="submit" name="like" value="like" id="like" > --}}
		{{!-- </form> --}}
	{{/if}}
	{{/if}}
{{/list}}
{{else}}
No Questions
{{/if}}
{{#showpaginate pg}}
{{/showpaginate}}
</div>