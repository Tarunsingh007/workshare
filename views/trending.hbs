<div class="container" id="postcontainer">
{{>header}}
<!-- {{#if user}}
welcome {{user.username}}
{{/if}}
 -->
 
{{#if posts}}
{{#list posts s}}
 {{this.title}}  
    <a href="\/{{this.url}}" id="posta">({{this.url}})</a><br>
	<p id="posta">by {{this.name}} | hide | 
	<a href="/post/comment/{{this._id}}" id="posta">{{humanize this.created}}</a> | 
	<a href="/post/comment/{{this._id}}" id="posta">{{countComments this.comments}} comments </a> | 
	<a href="/post/comment/{{this._id}}" id="posta">{{this.upvotes}} Likes </a></p>
    {{#if ../user}}
	{{#if (allowLike ../user._id this.likedby)}}
		<td><center><a href="/trending/upvote/{{this._id}}"><div valign="top" id="arrow"></div></a></center></td>
		{{else}}
		<td><center><a href="/trending/upvote/{{this._id}}"><div valign="top" id="votearrow"></div></a></center></td>
	{{/if}}
	{{/if}}
{{/list}}
{{else}}
No posts
{{/if}}
{{#trendingpaginate pg}}
{{/trendingpaginate}}
</div>
